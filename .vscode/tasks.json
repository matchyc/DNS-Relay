{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc.exe build active file",
            "command": "D:\\dev-tools\\MINGW\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "${workspaceFolder}\\functions.c",
                "${workspaceFolder}\\hashmap.c",
                "-lwsock32",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}